<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Foydalanuvchilar ro'yxati</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h2>Foydalanuvchilar ro'yxati</h2>
    <table class="table table-bordered table-striped mt-3">
      <thead>
        <tr>
          <th>Email</th>
          <th>Faollik</th>
          <th>Admin</th>
          <th>Ro'yxatdan o'tgan vaqti</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(function(user) { %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.isActive ? 'Aktiv' : 'Aktiv emas' %></td>
            <td>
              <% if (user.isAdmin) { %>
                <span class="badge bg-success">Admin</span>
              <% } else { %>
                <form method="POST" action="/users/<%= user._id %>/make-admin" style="display:inline;">
                  <button class="btn btn-sm btn-outline-primary" type="submit" onclick="return confirm('Rostdan ham admin qilmoqchimisiz?')">Admin qil</button>
                </form>
              <% } %>
            </td>
            <td><%= new Date(user.createdAt).toLocaleString() %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
